import string

letters = string.ascii_letters + string.punctuation

def encode(word, key):
  result = ''
  for letter in word:
    try:
      index = letters.index(letter)
      index += key
      index %= len(letters)
      new = letters[index]

    except:
      new = letter
      
    result += new
  return result
  
def decode(word, key):
  result = ''
  for letter in word:
    try:
      index = letters.index(letter)
      index -= key
      index %= len(letters)
      new = letters[index]

    except:
      new = letter
      
    result += new
  return result

message = "Hello? My name is Mr. Loren!"

ciphertext = encode(message, 1234)

print(ciphertext)

plaintext = decode(ciphertext, 1234)

print(plaintext)
